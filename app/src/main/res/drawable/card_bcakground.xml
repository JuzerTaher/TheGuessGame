<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#f0efef" />
            <stroke
                android:width="1dp"
                android:color="#e9e6e6" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#f5f5f3"
                android:endColor="#fffefb"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#e9e6e6" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
</selector>